<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.wojciechkula.locals.presentation.splashscreen.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/openLogin"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/openDashboard"
            app:destination="@id/dashboardFragment" />
    </fragment>

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.wojciechkula.locals.presentation.dashboard.DashboardFragment"
        android:label="fragment_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.wojciechkula.locals.presentation.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/openDashboard"
            app:destination="@id/dashboardFragment" />
        <action
            android:id="@+id/openRegister"
            app:destination="@id/registerUserDataFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerUserDataFragment"
        android:name="com.wojciechkula.locals.presentation.register.userdata.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/openRegisterHobbies"
            app:destination="@id/registerHobbies" />
    </fragment>

    <fragment
        android:id="@+id/registerHobbies"
        android:name="com.wojciechkula.locals.presentation.register.hobbies.RegisterHobbies"
        android:label="fragment_register_hobbies"
        tools:layout="@layout/fragment_register_hobbies" >
        <action
            android:id="@+id/openDashboard"
            app:destination="@id/dashboardFragment" />
    </fragment>
</navigation>